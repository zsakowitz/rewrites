{
  "proseWrap": "always",
  "semi": false,
  "trailingComma": "all",
  "plugins": ["prettier-plugin-jsdoc"],
  "experimentalTernaries": true,
  "experimentalOperatorPosition": "start",
  "jsdocCapitalizeDescription": false,
  "overrides": [
    {
      "files": "lambda-in-js.js",
      "options": { "arrowParens": "avoid", "semi": false }
    },
    {
      "files": "canvas/scene/**/*",
      "options": { "printWidth": 30 }
    },
    {
      "files": "five-point-conic.ts",
      "options": {
        "printWidth": 40
      }
    },
    {
      "files": "block-lang/**/*",
      "options": {
        "singleAttributePerLine": true
      }
    }
  ]
}
