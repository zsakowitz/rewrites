{
  "arrowParens": "always",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "embeddedLanguageFormatting": "auto",
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "insertPragma": false,
  "jsxSingleQuote": false,
  "printWidth": 80,
  "proseWrap": "always",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "semi": false,
  "singleAttributePerLine": false,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,
  "overrides": [
    {
      "files": "lambda.js",
      "options": { "arrowParens": "avoid", "semi": false }
    },
    {
      "files": "five-point-conic.ts",
      "options": {
        "printWidth": 40
      }
    },
    {
      "files": "block-lang/**/*",
      "options": {
        "singleAttributePerLine": true
      }
    }
  ]
}
